kind          "ConsoleApp"
language      "C++"
targetname    "test-filesystem"
files         { "../tests/filesystem/*.cpp" }

links         { "stdc++fs" } -- need for 11 <= C++ < 17

configuration "debug"
    objdir       ".cache/tests/filesystem/debug"
    targetdir    "../../.build/tests"
    links        { "pfs-test-d", "pfs-mpl-d" }

configuration "release"
    objdir       ".cache/tests/filesystem/release"
    targetdir    "../../.build/tests"
    links        { "pfs-test", "pfs-mpl" }

filter { "debug", "action:gmake" }
    linkoptions  { "-rdynamic" }

