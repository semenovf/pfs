kind          "ConsoleApp"
language      "C++"
targetname    "test-lexical_cast"
files         { "../tests/lexical_cast/*.cpp" }

-- Special for Qt projects
require("../../.gbs/qt_enable")

--Available modules:
--    core, gui, multimedia, network, opengl, positioning, printsupport,
--    qml, quick, sensors, sql, svg, testlib, websockets, widgets, xml
--
qtmodules     { "core" }

configuration "debug"
    objdir       ".cache/tests/lexical_cast/debug"
    targetdir    "../../.build/tests"
    links        { "pfs-test-d" }

configuration "release"
    objdir       ".cache/tests/lexical_cast/release"
    targetdir    "../../.build/tests"
    links        { "pfs-test" }

filter { "debug", "action:gmake" }
    linkoptions  { "-rdynamic" }

-- Special for Qt projects
package.loaded["../../.gbs/qt_enable"] = nil
