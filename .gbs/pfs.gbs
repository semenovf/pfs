language "C++"

files {
      "../src/pfs/*.cpp"
    , "../src/pfs/io/*.cpp"
    , "../src/pfs/db/*.c"
    , "../src/pfs/db/*.cpp"
    , "../src/pfs/application/*.cpp"
}

filter "platforms:unix* or elbrus*"
    files {
          "../src/pfs/gnuc/*.cpp"
        , "../src/pfs/posix/*.cpp"
        , "../src/pfs/io/posix/*.cpp"
        , "../src/pfs/application/posix/*.cpp"
    }

filter { "files:../src/pfs/db/sqlite3.c" }
    buildoptions { "-Wno-implicit-fallthrough" }
