solution "pfs-mpl"
    includedirs { "../include" }
    include("../../.gbs/solution-common.gbs")

configuration "debug"
    links        { "pfs-test-d", "pfs-mpl-d" }

configuration "release"
    links        { "pfs-test", "pfs-mpl" }

filter "action:gmake"
    if not STDCXX_FS_LIB then
        if BOOST_FILESYSTEM_LIB then
            links { "boost_filesystem" }
        end
    else
        links { "stdc++fs" }
    end

    if PTHREAD_LIB then
        links { "pthread" }
    end

    links  { "dl", "m" }

-- Projects

project "pfs-test"
    include("pfs-test.gbs")

project "pfs"
    include("pfs.gbs")

include("solution-tests.gbs")
include("solution-demo.gbs")

